<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.brainy.brainy.MainActivity$PlaceholderFragment">


    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/progressBar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="The favourite tray is where all your favourite questions are stored for future reference."
        android:layout_above="@+id/signIn"
        android:layout_centerHorizontal="true"
        android:textSize="14dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/noPostTxt"
        android:textColor="@color/colorPrimary"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:id="@+id/signIn"
        android:background="@drawable/button_bg"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorAccent"
        android:text="Sign in"/>


</RelativeLayout>
