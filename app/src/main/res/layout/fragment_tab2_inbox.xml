<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.brainy.brainy.activity.MainActivity$PlaceholderFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/inbox_layout"
        android:orientation="vertical">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/Inbox_list">

            </android.support.v7.widget.RecyclerView>

        </android.support.v4.widget.SwipeRefreshLayout>

        <com.brainy.brainy.data.MyFont
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You inbox is empty."
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="14dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:visibility="gone"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/noInboxTxt"
            android:textColor="@color/colorAccent"/>

    </RelativeLayout>


    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/progressBar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

        <com.brainy.brainy.data.MyFont
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This inbox is where you receieve notifications when someone answers one of you questions or comments on one of your posts."
            android:textSize="14dp"
            android:layout_above="@+id/signIn"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/noPostTxt"
            android:textColor="@color/colorPrimary"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:padding="5dp"
            android:id="@+id/signIn"
            android:background="@drawable/button_bg"
            android:textColor="@color/colorAccent"
            android:text="Sign in"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


</RelativeLayout>
