<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/chat_wallpaper"
    tools:context="com.brainy.erevu.activity.ChannelChatroomActivity">

    <include layout="@layout/channel_chat_toolbar"
        android:id="@+id/mCustomToolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.brainy.erevu.data.MyBoldFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empty"
            android:textSize="17dp"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:id="@+id/noAnsTxt"
            android:textColor="@color/colorPrimary"/>

        <android.support.v4.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_above="@+id/bottom_bar"
            android:id="@+id/refresh">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Chat_list"
                >

            </android.support.v7.widget.RecyclerView>

        </android.support.v4.widget.SwipeRefreshLayout>

        <com.brainy.erevu.data.MyBoldFont
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:visibility="gone"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/noNotyTxt"
            android:textColor="@color/colorAccent"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:id="@+id/bottom_bar"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:id="@+id/typing_bar"
                android:layout_alignParentBottom="true"
                android:background="@drawable/typing_layout">

                <com.brainy.erevu.data.CustomEditText
                    android:id="@+id/input_message"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_marginBottom="3dp"
                    android:background="#00ffffff"
                    android:hint="Broadcast..."
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@+id/sendBtn"
                    android:layout_toRightOf="@+id/photo"
                    android:padding="3dp"
                    android:layout_alignParentBottom="true" />

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="31dp"
                    android:id="@+id/photo"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="7dp"
                    android:layout_marginLeft="8dp"
                    android:scaleType="fitXY"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_gallery_cam"/>


                <ImageView
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/sendBtn"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="18dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_send"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:id="@+id/join_bar"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:background="@drawable/typing_layout">

                <com.brainy.erevu.data.MyFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_centerInParent="true"
                    android:text="Join"/>

            </RelativeLayout>

    </RelativeLayout>
    </RelativeLayout>

</LinearLayout>