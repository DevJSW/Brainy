<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.brainy.erevu.tabs.AboutProfileTab">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relyBio">

                   <com.brainy.erevu.data.MyBoldFont
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/bio"
                       android:text="Bio"
                       android:textColor="@color/colorAccent"
                       android:textSize="17dp"
                       android:layout_margin="15dp"/>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/bio"
                        app:cardElevation="1dp">

                        <com.brainy.erevu.data.MyFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="2sp"
                            android:textSize="16dp"
                            android:layout_margin="15dp"
                            android:id="@+id/user_bio"
                            />

                    </android.support.v7.widget.CardView>

        </RelativeLayout>

        <com.brainy.erevu.data.MyBoldFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Achievements"
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp"
                    android:layout_margin="15dp"/>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_margin="15dp"
                            android:layout_marginTop="15dp">

                            <com.brainy.erevu.data.MyFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:textSize="16dp"
                                android:text="Points Earned:"
                                />

                            <com.brainy.erevu.data.MyFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorAccent"
                                android:id="@+id/points_earned"
                                android:layout_alignParentRight="true"
                                android:textSize="16dp"
                                android:text="0"
                                />

                        </RelativeLayout>

                        <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:layout_marginBottom="20dp">

                        <com.brainy.erevu.data.MyFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16dp"
                            android:text="Reputation:"
                            />

                                <com.brainy.erevu.data.MyFont
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorAccent"
                                    android:id="@+id/reputation"
                                    android:textSize="16dp"
                                    android:layout_alignParentRight="true"
                                    android:text="Beginner"
                                    />

                    </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:layout_marginBottom="20dp">

                            <com.brainy.erevu.data.MyFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:textSize="16dp"
                                android:text="Profile views:"
                                />

                            <com.brainy.erevu.data.MyFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorAccent"
                                android:id="@+id/favourite"
                                android:layout_alignParentRight="true"
                                android:textSize="16dp"
                                android:text="0"
                                />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:layout_marginBottom="20dp">

                            <com.brainy.erevu.data.MyFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:textSize="16dp"
                                android:text="Questions:"
                                />

                            <com.brainy.erevu.data.MyFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorAccent"
                                android:id="@+id/user_questions"
                                android:layout_alignParentRight="true"
                                android:textSize="16dp"
                                android:text="0"
                                />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:layout_marginBottom="30dp">

                            <com.brainy.erevu.data.MyFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:textSize="16dp"
                                android:text="Answers:"
                                />

                            <com.brainy.erevu.data.MyFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorAccent"
                                android:id="@+id/user_answers"
                                android:layout_alignParentRight="true"
                                android:textSize="16dp"
                                android:text="0"
                                />

                        </RelativeLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>