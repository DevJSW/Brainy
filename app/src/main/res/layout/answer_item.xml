<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@drawable/question_bg"
        android:id="@+id/liny"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:id="@+id/user_image"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="5dp"
                android:id="@+id/post_image"
                android:src="@drawable/placeholder_image"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

           <!-- <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ley"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:paddingTop="1dp"
                android:orientation="vertical">
-->
                <com.brainy.brainy.data.MyFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/colorAccent"
                    android:textSize="13dp"
                    android:layout_marginLeft="7dp"
                    android:id="@+id/post_name" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/main_lay"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="2dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:orientation="horizontal">
                            <com.brainy.brainy.data.MyFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="Answered on"
                                android:textColor="#fff"
                                android:paddingTop="3dp"
                                android:id="@+id/ans"
                                android:textSize="9dp"
                               />

                            <com.brainy.brainy.data.MyFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:text="date"
                                android:textColor="#fff"
                                android:paddingTop="3dp"
                                android:layout_marginRight="5dp"
                                android:layout_alignParentRight="true"
                                android:textSize="9dp"
                                android:layout_gravity="right"
                                android:id="@+id/post_date" />
                        </LinearLayout>
                        <com.brainy.brainy.data.MyFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Message"
                            android:layout_marginLeft="5dp"
                            android:textColor="#fff"
                            android:id="@+id/post_answer"
                            android:textSize="14dp"
                            android:layout_marginBottom="3dp"
                            android:layout_marginRight="5dp" />


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="5dp">

                            <ImageView
                                android:layout_width="13dp"
                                android:layout_height="10dp"
                                android:id="@+id/location"
                                android:src="@drawable/ic_location_grey" />

                            <!--<com.sema.sema.CustonFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/location"
                                android:layout_marginLeft="1dp"
                                android:layout_marginBottom="1dp"
                                android:textColor="#fff"
                                android:textSize="9dp"
                                android:id="@+id/post_city"
                                android:text="city"/>-->


                            <com.brainy.brainy.data.MyFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/location"
                                android:textColor="#fff"
                                android:layout_marginBottom="1dp"
                                android:textSize="9dp"
                                android:id="@+id/post_address"
                                android:text="address"/>




                        </RelativeLayout>

                    </LinearLayout>

                   <!-- <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/counter"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="5dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:id="@+id/approveBtn"
                            android:src="@drawable/approve"/>

                        <com.brainy.brainy.data.MyFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="0"
                            android:textSize="11dp"
                            android:id="@+id/likeCount"
                            android:lines="1"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true" />

                    </RelativeLayout>
-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginBottom="10dp"
                        android:id="@+id/chat_image"
                        android:visibility="gone"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:background="@drawable/shape_bg_incoming_bubble"
                        android:paddingTop="5dp"
                        android:layout_marginTop="2dp"
                        android:paddingBottom="8dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="2dp"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:id="@+id/post_photo"
                            android:layout_marginLeft="10dp"
                            android:scaleType="fitXY"
                            android:layout_marginBottom="2dp"
                            android:src="@drawable/placeholder_image"/>

                        <com.brainy.brainy.data.MyFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:textSize="14dp"
                            android:paddingLeft="12dp"
                            android:paddingRight="35dp"
                            android:paddingBottom="3dp"
                            android:id="@+id/captionInput"
                            android:text="caption"/>

                    </LinearLayout>


                </RelativeLayout>



           <!-- </LinearLayout>-->

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>